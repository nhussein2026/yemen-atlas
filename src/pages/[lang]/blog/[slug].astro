---
import { getCollection } from "astro:content";
import { assertLang } from "../../../lib/lang";
import BaseLayout from "../../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return ["en", "ar"].flatMap((lang) =>
    posts.map((post) => ({
      params: { lang, slug: post.slug },
      props: { post, lang },
    }))
  );
}

const { post, lang } = Astro.props;
assertLang(lang);

// Render the markdown content as fallback
const { Content } = await post.render();
const isArabic = lang === "ar";

// Simple markdown formatter for content from frontmatter
function formatMarkdown(text: string): string {
  let html = text;

  // Convert ## headers
  html = html.replace(/^## (.+)$/gm, "<h2>$1</h2>");
  // Convert ### headers
  html = html.replace(/^### (.+)$/gm, "<h3>$1</h3>");
  // Convert bold
  html = html.replace(/\*\*(.+?)\*\*/g, "<strong>$1</strong>");
  // Convert bullet lists
  html = html.replace(/^- (.+)$/gm, "<li>$1</li>");
  html = html.replace(/(<li>.*?<\/li>)/s, "<ul>$1</ul>");
  // Convert paragraph breaks
  html = html.replace(/\n\n+/g, "</p><p>");
  html = "<p>" + html + "</p>";

  return html;
}
---

<BaseLayout
  lang={lang}
  title={post.data.title[lang]}
  description={post.data.excerpt[lang]}
>
  <div class={`${isArabic ? "rtl" : "ltr"}`} dir={isArabic ? "rtl" : "ltr"}>
    <div class="content-wrapper">
      <article class="content-container">
        <!-- Article Header -->
        <header class="article-header">
          <h1 class="article-title">
            {post.data.title[lang]}
          </h1>
          <p class="article-excerpt">
            {post.data.excerpt[lang]}
          </p>

          <!-- Metadata -->
          <div class="article-metadata">
            {
              post.data.publishedAt && (
                <time
                  datetime={post.data.publishedAt.toISOString()}
                  class="publish-date"
                >
                  {post.data.publishedAt.toLocaleDateString(
                    lang === "ar" ? "ar" : "en"
                  )}
                </time>
              )
            }

            {
              post.data.tags && post.data.tags.length > 0 && (
                <div class="tags">
                  {post.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )
            }
          </div>
        </header>

        <!-- Article Content -->
        <div class="article-content">
          {
            post.data.content && post.data.content[lang] ? (
              <div
                class="prose"
                set:html={formatMarkdown(post.data.content[lang])}
              />
            ) : (
              <Content />
            )
          }
        </div>

        <!-- Sources Footer -->
        {
          post.data.sources && post.data.sources.length > 0 && (
            <footer class="article-sources">
              <h2>Sources</h2>
              <ul>
                {post.data.sources.map((source) => (
                  <li>{source}</li>
                ))}
              </ul>
            </footer>
          )
        }
      </article>
    </div>
  </div>
</BaseLayout>

<style>
  /* Content Wrapper - Centers content */
  .content-wrapper {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 1rem;
  }

  .content-container {
    width: 100%;
    max-width: 48rem; /* 768px */
    padding: 0;
  }

  @media (min-width: 768px) {
    .content-wrapper {
      padding: 0 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .content-wrapper {
      padding: 0 2rem;
    }
  }

  /* Article Header */
  .article-header {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--atlas-border);
  }

  @media (min-width: 768px) {
    .article-header {
      margin-bottom: 3rem;
      padding-bottom: 3rem;
    }
  }

  .article-title {
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 700;
    margin: 0 0 1.25rem 0;
    color: var(--atlas-archive);
    line-height: 1.2;
    letter-spacing: -0.5px;
  }

  @media (min-width: 768px) {
    .article-title {
      margin-bottom: 1.5rem;
    }
  }

  .article-excerpt {
    font-size: clamp(0.9375rem, 2vw, 1.0625rem);
    line-height: 1.75;
    color: var(--atlas-stone);
    margin: 0 0 1.5rem 0;
    font-style: italic;
    text-align: justify;
  }

  @media (min-width: 768px) {
    .article-excerpt {
      margin-bottom: 2rem;
    }
  }

  .article-metadata {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
    font-size: clamp(0.8125rem, 1.5vw, 0.875rem);
    color: var(--atlas-stone);
  }

  @media (min-width: 768px) {
    .article-metadata {
      gap: 1.5rem;
    }
  }

  .publish-date {
    display: block;
    font-weight: 500;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
  }

  .tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background-color: var(--atlas-paper);
    color: var(--atlas-archive);
    border-radius: 0.25rem;
    font-size: clamp(0.75rem, 1.2vw, 0.8125rem);
    border: 1px solid var(--atlas-border);
    font-weight: 500;
  }

  /* Article Content */
  .article-content {
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .article-content {
      margin-bottom: 4rem;
    }
  }

  .prose {
    line-height: 1.8;
    color: var(--atlas-archive);
  }

  .prose :global(p) {
    margin: 1.75rem 0;
    text-align: justify;
    word-spacing: 0.1em;
    letter-spacing: 0.3px;
  }

  .prose :global(p:first-child) {
    margin-top: 0;
  }

  .prose :global(p:last-child) {
    margin-bottom: 0;
  }

  .prose :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
    font-size: clamp(1.375rem, 3.5vw, 1.875rem);
    font-weight: 600;
    color: var(--atlas-terracotta);
    border-bottom: 2px solid var(--atlas-border);
    padding-bottom: 0.75rem;
    line-height: 1.3;
  }

  .prose :global(h2:first-child) {
    margin-top: 0;
  }

  .prose :global(h3) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: clamp(1.125rem, 2.5vw, 1.375rem);
    font-weight: 600;
    color: var(--atlas-archive);
    line-height: 1.3;
  }

  .prose :global(strong) {
    font-weight: 600;
    color: var(--atlas-terracotta);
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 1.75rem 0;
    padding-left: 2rem;
  }

  [dir="rtl"] .prose :global(ul),
  [dir="rtl"] .prose :global(ol) {
    padding-left: 0;
    padding-right: 2rem;
  }

  .prose :global(li) {
    margin: 0.625rem 0;
    line-height: 1.7;
    color: var(--atlas-archive);
  }

  .prose :global(li) :global(p) {
    margin: 0.5rem 0;
  }

  .prose :global(a) {
    color: var(--atlas-sand);
    text-decoration: underline;
    transition: opacity 300ms ease;
  }

  .prose :global(a:hover) {
    opacity: 0.8;
  }

  .prose :global(blockquote) {
    margin: 1.75rem 0;
    padding-left: 1.25rem;
    border-left: 4px solid var(--atlas-terracotta);
    color: var(--atlas-stone);
    font-style: italic;
    line-height: 1.7;
  }

  [dir="rtl"] .prose :global(blockquote) {
    padding-left: 0;
    padding-right: 1.25rem;
    border-left: none;
    border-right: 4px solid var(--atlas-terracotta);
  }

  .prose :global(code) {
    background-color: var(--atlas-paper);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-family: monospace;
    color: var(--atlas-archive);
    font-size: 0.9em;
  }

  .prose :global(pre) {
    background-color: var(--atlas-paper);
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.75rem 0;
    border: 1px solid var(--atlas-border);
  }

  .prose :global(pre code) {
    background-color: transparent;
    padding: 0;
    color: var(--atlas-archive);
  }

  .prose :global(img) {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
    border-radius: 0.5rem;
  }

  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.75rem 0;
  }

  .prose :global(th),
  .prose :global(td) {
    padding: 0.875rem;
    border: 1px solid var(--atlas-border);
    text-align: left;
  }

  .prose :global(th) {
    background-color: var(--atlas-paper);
    font-weight: 600;
    color: var(--atlas-archive);
  }

  .prose :global(td) {
    color: var(--atlas-archive);
  }

  /* Article Sources */
  .article-sources {
    padding-top: 2.5rem;
    border-top: 1px solid var(--atlas-border);
    margin-top: 2.5rem;
  }

  @media (min-width: 768px) {
    .article-sources {
      padding-top: 3rem;
      margin-top: 3rem;
    }
  }

  .article-sources :global(h2) {
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
    color: var(--atlas-terracotta);
    margin: 0 0 1.25rem 0;
    border-bottom: none;
    padding-bottom: 0;
  }

  .article-sources :global(ul) {
    list-style: disc;
    padding-left: 1.5rem;
    margin: 0;
  }

  [dir="rtl"] .article-sources :global(ul) {
    padding-left: 0;
    padding-right: 1.5rem;
  }

  .article-sources :global(li) {
    margin: 0.625rem 0;
    color: var(--atlas-stone);
    font-size: clamp(0.875rem, 1.5vw, 0.95rem);
    line-height: 1.65;
  }

  /* Responsive adjustments for small screens */
  @media (max-width: 640px) {
    .article-header {
      margin-bottom: 2rem;
      padding-bottom: 2rem;
    }

    .article-title {
      font-size: 1.875rem;
      margin-bottom: 1rem;
    }

    .article-excerpt {
      font-size: 0.9375rem;
      margin-bottom: 1.25rem;
    }

    .article-metadata {
      flex-direction: column;
      gap: 0.625rem;
      align-items: flex-start;
      font-size: 0.8125rem;
    }

    .prose :global(h2) {
      margin-top: 2rem;
      margin-bottom: 1rem;
      font-size: 1.375rem;
    }

    .prose :global(h3) {
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
      font-size: 1.125rem;
    }

    .prose :global(p) {
      margin: 1.5rem 0;
      font-size: 0.9375rem;
    }
  }
</style>
